div(*ngIf='!login').main-dash
    div(*ngIf='!dash').main-dash__content
        .main-dash__song
            h1.main-dash__title Song
            //img(src="#", alt="")
        .main-dash__list
            ul
                li(*ngFor='let dope of data')
                    p S1 
                    h3 {{dope.album.song.name}} #[span {{dope.album.artist}}]
                    span #musica, #pop, #music, #electro, #regge, #reggaetoon
                    strong 30s
    div(*ngIf='dash')
        h2 Usuario
        img(src="build/media/img/1.png", alt="")
        ul
            li: a((click)='openLibrary()') Biblioteca
            li: a() Cerrar Sesion
        div(*ngIf='!library')
            h1.dash-title Dope Music
            .dash-song-main
                .song-cover
                    h1 song
                    //img(src="#", alt="")
            ul.dash-album
                li(*ngFor='let dope of data')
                    p S1 
                    h3 {{dope.album.song.name}} #[span {{dope.album.artist}}]
                    strong {{dope.album.song.time}}
        div(*ngIf='library').dash-library
            div(*ngIf='!album').library-list
                h1 Biblioteca
                a((click)='openAlbum()')
                    h3 Album 1
            div(*ngIf='album').library-album
                h1 Album 1
                p.la-title  Lorem ipsum dolor sit amet, consectetur adipisicing elit. Iste earum voluptates
                .bdiv
                ul.dash-album
                    li
                        p S1 
                        h3 Song 1 #[span Dope Music]
                        strong 3:15
                    li
                        p S2 
                        h3 Song 2 #[span Dope Music]
                        strong 4:02
                    li
                        p S3 
                        h3 Song 3 #[span Dope Music]
                        strong 3:21
